<Window x:Class="FDTDWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FDTDWPF"
        xmlns:vm="clr-namespace:FDTDWPF.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="400" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Viewport3D>
            <Viewport3D.Camera>
                <PerspectiveCamera Position="0, 0, 2" LookDirection="0, 0, -2"/>
            </Viewport3D.Camera>
        </Viewport3D>
        <UniformGrid HorizontalAlignment="Right" VerticalAlignment="Bottom" Rows="1" Margin="0,20">
            <Button Content ="Ok" Name = "OK" Margin="15,0" Padding="40,5"/>
            <Button Content ="Cancel" Name="Cancel" Margin="15,0"/>
        </UniformGrid>
    </Grid>
</Window>
